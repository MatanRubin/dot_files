[branch]
	autosetuprebase = always

[core]
	whitespace = trailing-space,space-before-tab
	editor = vim
	excludesfile = ~/.gitignore_global
[diff]
	tool = p4diff

[difftool]
	prompt = false

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

