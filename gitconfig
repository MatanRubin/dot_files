[color "grep"]
	external = --color=always

[guitool "Rebase onto..."]
	cmd = git rebase
	revprompt = yes
[guitool "Rebase/Continue"]
	cmd = git rebase --continue
[guitool "Rebase/Skip"]
	cmd = git rebase --skip
[guitool "Rebase/Abort"]
	cmd = git rebase --abort
[guitool "Pull with Rebase"]
	cmd = git pull --rebase

[alias]
       log-pretty  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[alias]
	st = status -b
	br = branch
	df = diff
	co = checkout
	push-tags = push --tags
	clean-fxd = clean -fxd
	add-commit = commit -a
	reset-head = reset --hard HEAD
	ls = log --oneline --decorate
	ll = log --oneline --graph --all --pretty --decorate --date=iso
	lf = log --graph --all --format=format:'%C(yellow)%h%C(reset) - %C(blue)%ci%C(reset) %C(red)%d%C(reset)%n''  %C(normal)%s%C(reset) %C(bold)- %an %C(dim)<%cE> %C(reset)' --abbrev-commit
	unstage = reset HEAD --
	untrack = rm --cached --
	visual = !gitk


[giggle]
	main-window-maximized = false
	main-window-geometry = 700x550+0+59
	main-window-view = FileView

[merge]
	tool = p4merge

[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	trustExitCode = false

[difftool "p4diff"]
	cmd = p4diff "$LOCAL" "$REMOTE"

